{
  "name": "ryubi",
  "version": "2.0.0-beta1",
  "description": "eBay Search Tools",
  "author": "Mamoru Hashimoto",
  "scripts": {
    "pack": "node electron.config.js",
    "build:dev:web": "webpack --config webpack.development.js",
    "build:pro:web": "webpack --config webpack.production.js",
    "build:dev:node": "cross-env NODE_ENV=development webpack --config webpack.node.js",
    "build:pro:node": "cross-env NODE_ENV=production webpack --config webpack.node.js",
    "build:dev:utils": "cross-env NODE_ENV=development webpack --config webpack.utils.js",
    "build:pro:utils": "cross-env NODE_ENV=production webpack --config webpack.utils.js",
    "build:development": "npm-run-all -p build:dev:web build:dev:node build:dev:utils",
    "build:production": "npm-run-all -p build:pro:web build:pro:node build:pro:utils",
    "start:dev": "webpack-dev-server --config webpack.development.js",
    "start:node": "cross-env NODE_ENV=development API_URL=http://localhost:3000 electron dist/desktop.node.js",
    "start:development": "npm-run-all -p start:dev start:node",
    "start:production": "cross-env NODE_ENV=production electron dist/desktop.node.js",
    "watch:node": "cross-env NODE_ENV=development webpack --config webpack.node.js --watch"
  },
  "license": "ISC",
  "dependencies": {
    "classnames": "2.2.6",
    "flux": "^3.1.3",
    "iso8601-duration": "1.1.1",
    "log4js": "^3.0.5",
    "promise-throttle": "^1.0.0",
    "prop-types": "15.6.2",
    "ramda": "^0.25.0",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "rxjs": "^6.2.2",
    "xml2js": "0.4.19",
    "xmlbuilder": "10.0.0"
  },
  "devDependencies": {
    "@babel/core": "7.0.0-beta.52",
    "@babel/preset-env": "7.0.0-beta.52",
    "@babel/preset-react": "7.0.0-beta.52",
    "babel-eslint": "8",
    "babel-loader": "8.0.0-beta.4",
    "clean-webpack-plugin": "0.1.19",
    "copy-webpack-plugin": "4.5.2",
    "cross-env": "5.2.0",
    "css-loader": "1.0.0",
    "devtron": "^1.4.0",
    "electron": "^3.0.0-beta.4",
    "electron-packager": "^12.1.0",
    "eslint": "4.x",
    "eslint-loader": "2.0.0",
    "eslint-plugin-react": "7.10.0",
    "file-loader": "1.1.11",
    "html-webpack-plugin": "^3.2.0",
    "html-webpack-template": "^6.2.0",
    "mini-css-extract-plugin": "0.4.1",
    "npm-run-all": "4.1.3",
    "postcss-easy-import": "3.0.0",
    "postcss-loader": "2.1.5",
    "uglifyjs-webpack-plugin": "1.2.7",
    "webpack": "^4.16.5",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.5",
    "webpack-manifest-plugin": "2.0.3",
    "webpack-merge": "4.1.3"
  }
}
